<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".NavegacionUsuario.VozActivity" android:background="@drawable/app2">

    <TextView
            android:text="INMOCASAS"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18sp" android:layout_marginTop="38dp"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.497"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="101dp" android:layout_marginEnd="101dp" android:layout_alignParentTop="true"
            android:textColor="@android:color/white"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:id="@+id/textTv"
            android:text="Toque el microfono para buscar"
            android:layout_alignParentTop="true"
            android:textSize="20dp" android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
            android:layout_marginTop="174dp" android:layout_toEndOf="@+id/voiceBtn"
            android:layout_toRightOf="@+id/voiceBtn" android:textColor="@android:color/white"/>
    <ImageButton
            android:id="@+id/voiceBtn"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/app_name"
            android:background="@drawable/ic_mic"
            android:layout_marginTop="115dp" android:layout_below="@+id/textView2"
    />
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="340dp"
            android:layout_height="361dp" android:layout_marginTop="25dp" android:layout_below="@+id/textTv"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="0dp" android:layout_marginEnd="0dp" android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp" android:layout_marginStart="0dp" android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="3dp"
            android:id="@+id/reciclerView_busqueda" android:background="@drawable/round1"/>


</RelativeLayout>