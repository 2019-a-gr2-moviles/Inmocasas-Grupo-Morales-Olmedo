<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/publicaciones_eliminar_layout">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="206dp" tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/img_publicacion" android:layout_marginTop="26dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="5dp" android:layout_marginStart="5dp"
            android:layout_alignParentLeft="true" app:srcCompat="@drawable/c1" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="-5dp" android:layout_marginEnd="-5dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="264dp"
            android:layout_height="wrap_content" android:id="@+id/txt_titulo"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/img_publicacion" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="69dp" android:layout_marginEnd="69dp"
            android:textSize="30sp"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="TextView"
            android:layout_width="290dp"
            android:layout_height="92dp" android:id="@+id/txt_descripcion" android:layout_marginTop="21dp"
            android:layout_below="@+id/txt_fecha" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="37dp" android:layout_marginEnd="37dp"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="TextView"
            android:layout_width="252dp"
            android:layout_height="38dp" android:id="@+id/txt_fecha" android:layout_marginTop="17dp"
            android:layout_below="@+id/txt_titulo" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="74dp" android:layout_marginEnd="74dp"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_precio" android:layout_marginTop="46dp"
            android:layout_below="@+id/img_publicacion" android:layout_alignParentStart="true"
            android:layout_marginLeft="259dp" android:layout_marginStart="259dp" android:layout_alignParentLeft="true"
            android:textColor="@android:color/white"/>
    <Button
            android:text="Eliminar"
            android:layout_width="173dp"
            android:layout_height="wrap_content" android:id="@+id/btn_hacer_publico"
            android:layout_marginTop="474dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="102dp" android:layout_marginStart="102dp"
            android:layout_alignParentLeft="true" android:background="@drawable/round"
            android:textColor="@android:color/white" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="136dp" android:layout_marginEnd="136dp"/>
</RelativeLayout>
