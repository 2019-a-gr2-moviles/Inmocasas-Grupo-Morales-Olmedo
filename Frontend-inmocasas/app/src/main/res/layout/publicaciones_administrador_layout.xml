<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/publicaciones_administrador_layout">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="197dp" tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/img_publicacion" android:layout_marginTop="18dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="-9dp" android:layout_marginStart="-9dp"
            android:layout_alignParentLeft="true" app:srcCompat="@drawable/c1" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="9dp" android:layout_marginEnd="9dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="270dp"
            android:layout_height="41dp" android:id="@+id/txt_titulo"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/img_publicacion"
            android:textSize="18sp" android:textColor="@android:color/white"/>
    <TextView
            android:text="TextView"
            android:layout_width="286dp"
            android:layout_height="63dp" android:id="@+id/txt_descripcion" android:layout_marginTop="21dp"
            android:layout_below="@+id/txt_fecha" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="41dp" android:layout_marginEnd="41dp"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="TextView"
            android:layout_width="252dp"
            android:layout_height="38dp" android:id="@+id/txt_fecha" android:layout_marginTop="17dp"
            android:layout_below="@+id/txt_titulo" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="74dp" android:layout_marginEnd="74dp"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_precio" android:layout_marginTop="46dp"
            android:layout_below="@+id/img_publicacion" android:layout_alignParentStart="true"
            android:layout_marginLeft="259dp" android:layout_marginStart="259dp" android:layout_alignParentLeft="true"
            android:textColor="@android:color/white"/>
    <Button
            android:text="Hacer Publico"
            android:layout_width="264dp"
            android:layout_height="wrap_content" android:id="@+id/btn_hacer_publico"
            android:layout_marginTop="437dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="63dp" android:layout_marginStart="63dp"
            android:layout_alignParentLeft="true" android:background="@drawable/round"
            android:textColor="@android:color/white" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="85dp" android:layout_marginEnd="85dp"/>
</RelativeLayout>
