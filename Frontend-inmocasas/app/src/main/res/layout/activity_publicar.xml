<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NavegacionUsuario.PublicarActivity" android:background="@android:color/white">

    <ImageView
            android:layout_width="116dp"
            android:layout_height="50dp" app:srcCompat="@drawable/logotipo"
            android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.057"/>
    <TextView
            android:text="INMOCASAS"
            android:layout_width="170dp"
            android:layout_height="25dp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.58"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintVertical_bias="0.0"/>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="359dp"
            android:layout_height="521dp"
            tools:context=".NavegacionUsuario.PublicarActivity"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="5dp" android:layout_marginStart="5dp"
            android:layout_marginRight="5dp" android:layout_marginEnd="5dp" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:id="@+id/constraintLayout" app:layout_constraintHorizontal_bias="1.0">

        <ImageView
                android:layout_width="84dp"
                android:layout_height="69dp" tools:src="@tools:sample/avatars[0]"
                android:id="@+id/img_publicar"
                android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:layout_marginTop="44dp"
                app:layout_constraintHorizontal_bias="0.103"/>
        <EditText
                android:layout_width="193dp"
                android:layout_height="42dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_precio"
                android:hint="Precio"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_titulo"/>
        <EditText
                android:layout_width="194dp"
                android:layout_height="42dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_titulo"
                android:hint="Titulo"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
        <EditText
                android:layout_width="344dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_calle_principal"
                android:hint="Calle Principal"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_sector" android:layout_marginTop="8dp"/>
        <EditText
                android:layout_width="344dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_sector"
                android:hint="Sector"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/TextViewDatos"/>
        <EditText
                android:layout_width="344dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_calle_secundaria"
                android:hint="Calle Secundaria"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_calle_principal"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_numero_habitaciones"
                android:hint="N° Habitaciones"
                app:layout_constraintTop_toBottomOf="@+id/edit_calle_secundaria" android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="20dp"
        />
        <EditText
                android:layout_width="150dp"
                android:layout_height="38dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_numero_parqueaderos"
                android:hint="N° Parqueaderos"
                app:layout_constraintTop_toBottomOf="@+id/edit_numero_habitaciones" android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="20dp"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_longitud"
                android:hint="Longitud"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_ciudad" android:editable="false"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_ciudad"
                android:hint="Ciudad"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_numero_parqueaderos"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_anio"
                android:hint="Año"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_numero_banios"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_latitud"
                android:hint="Latitud"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_anio" android:editable="false"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_numero_banios"
                android:hint="N° Banios"
                app:layout_constraintTop_toBottomOf="@+id/edit_numero_pisos" android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_numero_pisos"
                android:hint="N° Pisos"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_calle_secundaria"/>
        <EditText
                android:layout_width="344dp"
                android:layout_height="50dp"
                android:inputType="textMultiLine"
                android:gravity="start|top"
                android:ems="10"
                android:id="@+id/edit_descripcion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.619" android:hint="Descripción"
                app:layout_constraintTop_toBottomOf="@+id/edit_precio" android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" android:layout_marginRight="5dp" android:layout_marginEnd="5dp"/>
        <TextView
                android:text="DATOS DEL INMUEBLE"
                android:layout_width="226dp"
                android:layout_height="25dp"
                android:id="@+id/TextViewDatos"
                app:layout_constraintTop_toBottomOf="@+id/edit_descripcion"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintHorizontal_bias="0.344" android:textSize="18sp"/>
        <Button
                android:text="Publicar"
                android:layout_width="233dp"
                android:layout_height="30dp"
                android:id="@+id/btn_publicar"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/round"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent" tools:layout_editor_absoluteY="4dp"/>
        <Button
                android:text="Mapa"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:id="@+id/btn_map"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:background="@drawable/round"
                android:textColor="@android:color/white"
                android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.537" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_latitud"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>