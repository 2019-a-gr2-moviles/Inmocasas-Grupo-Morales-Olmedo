<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NavegacionUsuario.PublicarActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".NavegacionUsuario.PublicarActivity" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">

        <ImageView
                android:layout_width="124dp"
                android:layout_height="87dp" tools:src="@tools:sample/avatars[0]"
                android:id="@+id/img_publicar"
                android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:layout_marginTop="44dp"
                app:layout_constraintHorizontal_bias="0.036"/>
        <EditText
                android:layout_width="193dp"
                android:layout_height="39dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText3"
                android:hint="Precio"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/editText2"/>
        <EditText
                android:layout_width="194dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText2"
                android:hint="Titulo"
                android:layout_marginTop="44dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
        <EditText
                android:layout_width="322dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_calle_principal"
                android:hint="Calle Principal"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edit_sector"/>
        <EditText
                android:layout_width="322dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_sector"
                android:hint="Sector"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/TextViewDatos"/>
        <EditText
                android:layout_width="322dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_calle_seecundaria"
                android:hint="Calle Secundaria"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" app:layout_constraintTop_toBottomOf="@+id/edit_calle_principal"
                app:layout_constraintHorizontal_bias="0.318" android:layout_marginTop="8dp"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/eedit_numero_habitaciones"
                android:hint="N° Habitaciones"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_calle_seecundaria" android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="20dp"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_numero_parqueaderos"
                android:hint="N° Parqueaderos"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/eedit_numero_habitaciones" android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="20dp"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_ciudad"
                android:hint="Ciudad"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="20dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edit_numero_parqueaderos"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_anio"
                android:hint="Año"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edit_numero_banios"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_numero_banios"
                android:hint="N° Banios"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_numero_pisos" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_numero_pisos"
                android:hint="N° Pisos"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edit_calle_seecundaria"/>
        <EditText
                android:layout_width="326dp"
                android:layout_height="67dp"
                android:inputType="textMultiLine"
                android:gravity="start|top"
                android:ems="10"
                android:id="@+id/editText4"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.619" android:hint="Descripción"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText3"/>
        <TextView
                android:text="DATOS DEL INMUEBLE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TextViewDatos"
                app:layout_constraintTop_toBottomOf="@+id/editText4" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintHorizontal_bias="0.344"/>
        <TextView
                android:text="PUBLICAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDatos"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"/>
        <Button
                android:text="Publicar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_publicar" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_ciudad" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>