<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NavegacionUsuario.PublicarActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".NavegacionUsuario.PublicarActivity" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="0dp">

        <ImageView
                android:layout_width="84dp"
                android:layout_height="69dp" tools:src="@tools:sample/avatars[0]"
                android:id="@+id/img_publicar"
                android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:layout_marginTop="32dp"
                app:layout_constraintHorizontal_bias="0.138"/>
        <EditText
                android:layout_width="193dp"
                android:layout_height="38dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_precio"
                android:hint="Precio"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_titulo"/>
        <EditText
                android:layout_width="194dp"
                android:layout_height="38dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_titulo"
                android:hint="Titulo"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
        <EditText
                android:layout_width="352dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_calle_principal"
                android:hint="Calle Principal"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_sector"/>
        <EditText
                android:layout_width="352dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_sector"
                android:hint="Sector"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toBottomOf="@+id/TextViewDatos"/>
        <EditText
                android:layout_width="352dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_calle_secundaria"
                android:hint="Calle Secundaria"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" app:layout_constraintTop_toBottomOf="@+id/edit_calle_principal"
                app:layout_constraintHorizontal_bias="0.318"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="38dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_numero_habitaciones"
                android:hint="N° Habitaciones"
                app:layout_constraintTop_toBottomOf="@+id/edit_calle_secundaria" android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="20dp"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="38dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_numero_parqueaderos"
                android:hint="N° Parqueaderos"
                app:layout_constraintTop_toBottomOf="@+id/edit_numero_habitaciones" android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="20dp"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="38dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_longitud"
                android:hint="Longitud"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_ciudad"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="38dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_ciudad"
                android:hint="Ciudad"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_numero_parqueaderos"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_anio"
                android:hint="Año"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_numero_banios"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_latitud"
                android:hint="Latitud"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_anio"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_numero_banios"
                android:hint="N° Banios"
                app:layout_constraintTop_toBottomOf="@+id/edit_numero_pisos" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_numero_pisos"
                android:hint="N° Pisos"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_calle_secundaria"/>
        <EditText
                android:layout_width="326dp"
                android:layout_height="39dp"
                android:inputType="textMultiLine"
                android:gravity="start|top"
                android:ems="10"
                android:id="@+id/edit_descripcion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.619" android:hint="Descripción"
                app:layout_constraintTop_toBottomOf="@+id/edit_precio"/>
        <TextView
                android:text="DATOS DEL INMUEBLE"
                android:layout_width="226dp"
                android:layout_height="25dp"
                android:id="@+id/TextViewDatos"
                app:layout_constraintTop_toBottomOf="@+id/edit_descripcion" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintHorizontal_bias="0.344"/>
        <TextView
                android:text="PUBLICAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDatos"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"/>
        <Button
                android:text="Publicar"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:id="@+id/btn_publicar"
                tools:layout_editor_absoluteX="241dp" tools:layout_editor_absoluteY="443dp"/>
        <Button
                android:text="Mapa"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:id="@+id/btn_map" app:layout_constraintStart_toStartOf="@+id/edit_latitud"
                app:layout_constraintEnd_toEndOf="@+id/edit_latitud"
                app:layout_constraintTop_toBottomOf="@+id/edit_latitud"
                app:layout_constraintHorizontal_bias="1.0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>